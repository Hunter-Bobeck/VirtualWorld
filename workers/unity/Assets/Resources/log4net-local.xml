<log4net>
  <appender name="GameConsole" type="ValionLogAppender">
    <layout type="log4net.Layout.PatternLayout">
      <!-- Pattern to output the caller's file name and line number -->
      <conversionPattern value="[%5level] %d{HH:mm:ss} - %message%newline %stacktracedetail%newline(%file:%line)%newline" />
    </layout>
  </appender>
  
  <appender name="UnityConsole" type="Improbable.Unity.Logging.UnityConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <!-- Pattern to output the caller's file name and line number -->
      <conversionPattern value="[%5level] %d{HH:mm:ss} - %message%newline %stacktracedetail%newline(%file:%line)%newline" />
    </layout>
  </appender>

  <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
    <file value="${APPDATA}\client.log" />
    <appendToFile value="true" />
    <maximumFileSize value="500000KB" />
    <maxSizeRollBackups value="2" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%5level] %d{HH:mm:ss} - %message%newline %stacktracedetail%newline(%file:%line)%newline" />
    </layout>
  </appender>

  <root>
    <level value="DEBUG" />
    <appender-ref ref="GameConsole" />
    <appender-ref ref="RollingFile" />
    <appender-ref ref="UnityConsole" />
  </root>
</log4net>